    "express-rate-limit": "^7.4.1",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "nodemailer": "^6.9.15",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.16",
    "firebase-functions-test": "^3.1.0",
    "react-email": "3.0.2",
    "typescript": "^4.9.0"
  },
